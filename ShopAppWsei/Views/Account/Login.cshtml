@model Models.ViewModels.LoginModel;
@section Styles {
    <link href="~/css/register.css" rel="stylesheet" type="text/css"/> 
}
@{
    ViewBag.Title = "Logowanie";
    Layout = "_AdminLayout";
}

<div class="body"></div>
<div class="grad"></div>
<div class="header">
    <div>Sklep<span>Komputerowy</span></div>
</div>
<br>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Login" asp-controller="Account" class="login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="form-group">
        <label asp-for="Name">Nazwa użytkownika</label>
        <div><span asp-validation-for="Name" name="user" class="text-danger" placeholder="username"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password">Hasło</label>
        <div><span asp-validation-for="Password"  name="password" class="text-danger" placeholder="password"></span></div>
        <input asp-for="Password" class="form-control" />
    </div>
    <button class="btn btn-primary" value="Login" type="submit">Zaloguj</button>
</form>

